{
  "project": {
    "name": "RAGBuilder Assistant",
    "version": "1.0.0",
    "description": "Plateforme web pour créer des chatbots RAG personnalisés",
    "author": "Alzago-collab"
  },
  "defaults": {
    "chunkSize": 200,
    "overlap": 50,
    "embeddingModel": "text-embedding-ada-002",
    "llmModel": "gpt-4",
    "temperature": 0.7,
    "maxTokens": 1000,
    "topK": 5,
    "similarityThreshold": 0.7,
    "theme": "light",
    "chatStyle": "modern"
  },
  "limits": {
    "maxFileSize": 10485760,
    "maxFiles": 50,
    "maxChunks": 10000,
    "allowedFileTypes": [".pdf", ".docx", ".txt", ".md"]
  },
  "api": {
    "baseUrl": "https://api.openai.com/v1",
    "timeout": 30000,
    "retries": 3
  }
}
